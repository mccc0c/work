var site_url = "http://www.easyrong.com/";
$(function() {
    //头部退出
    $('a.quit').click(function() {
        $('.login_state').hide();
        $('.no_login').show();
    });
    $('.top_messageTip a').click(function() {
        $(this).parent('.top_messageTip').hide();
    });

    $('.nav_intro').hover(function() {
        $(this).prev('li').css('color', '#f1f1f1');
        $(this).addClass('cur');
        $(this).children('.web_nav').show();
    }, function() {
        $(this).prev('li').css('color', '#999');
        $(this).removeClass('cur');
        $(this).children('.web_nav').hide();
    });

    $('.search_select').hover(function() {
        $(this).children('dt').addClass('cur');
        $(this).children('dd').stop(true, true).slideDown();
    }, function() {
        $(this).children('dt').removeClass('cur');
        $(this).children('dd').stop(true, true).slideUp();
    });

    $('.search_select dd a').click(function() {
        var _t = $(this).text();
        $('.search_select dt a').text(_t);
    });

    $('#header_search_submit').click(function() {
        var _t = $("#header_search_keyword").val();
        location.href = "/common/news_search?s=" + _t;
    });

    $('.cart_icon').hover(function() {
        $(this).children('.cart_header').stop(true, true).slideDown();
    }, function() {
        $(this).children('.cart_header').stop(true, true).slideUp();
    });

    $('.map_area').hover(function() {
        $(this).children('a').addClass('cur');
        $(this).children('.map_slideDown').stop(true, true).slideDown();
    }, function() {
        $(this).children('a').removeClass('cur');
        $(this).children('.map_slideDown').stop(true, true).slideUp();
    })

    $('.nav2017 .qrcode').hover(function() {
        $('.nav2017 .qrbox').stop(true, true).fadeIn();
    }, function() {
        $('.nav2017 .qrbox').stop(true, true).fadeOut();
    });

    $('.nav2017 .nav_area').hover(function() {
        $('.nav2017 .areabox').stop(true, true).fadeIn();
    }, function() {
        $('.nav2017 .areabox').stop(true, true).fadeOut();
    });

});

$(document).keyup(function(event) {
    if (event.keyCode == 13) {
        $("#header_search_submit").trigger("click");
    }
});