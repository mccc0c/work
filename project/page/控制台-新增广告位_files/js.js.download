/**
 * @param cssmodel 大于0 success
*/
var define_tip = function(message,cssmodel,settile){
    var smsg = message==''?'操作成功':message,
        scss = cssmodel>0?"success":'danger',
        settile = settile?settile:'操作提示';
    var tips ='<div>'+'<div class="alert alert-block alert-'+scss+'" style="text-align:center;min-height:100px;vertical-align:middle">'+smsg+' </div>'+
            '</div>';
    bootbox.alert({  
        buttons: {  
           ok: {
                label: '关闭',  
                className: 'btn-primary'  
            }  
        },  
        message: tips,  
        title: settile  
    }); 
};
var gritter_info = function(info){
    $.gritter.add({
        title: '提示信息',
        text: '<center style="color: #b52c26;">'+info+'</center>',
        time: 1000,
        speed:500,
        position: 'center',
        class_name: 'gritter-info gritter-center gritter-light'
    });
};
$(function() {
    var flag = 0;
    var obj = Object();
    var page = location.href.split('?')[0] || location.href.split('#')[0];
    var page_base = location.href.split('/');
        page_base[page_base.length-1] = 'index';

    var url= page_base.join('/')
    $('.nav').each(function() {
        var d = $(this).attr('href');
        if(d == url){
            obj = $(this);
        }
        if (d == page) {
            var a = $(this);
            a.addClass('on');
            a.parents('.submenu').show();
            a.parents('li').addClass('open');
            flag = 1;
        }
    });
    if(!flag&&obj.parents){
        obj.parents('.submenu').show();
        obj.parents('li').addClass('open');
    }

    $('#btnSearch').click(function () {
        $('#search_fm')[0].submit();
    });

    //
    /*$(document).on('click', '.nav', function() {
        var d = $(this).attr('href');
        setCookie('page', d);
        $('.nav').removeClass('on')
        $(this).parent('li').addClass('on');
    });*/
});